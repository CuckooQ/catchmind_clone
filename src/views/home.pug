<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/styles/styles.css")
        title CatchMind Clone
    body
        .loginBox#loginBox
            form(action="", method="post")
                input(placeholder="What is your name?", type="text")
        .gameContainer#gameContainer
            .main
                #wordNotification
                canvas.canvas#canvas
                .controls#controls
                    button#mode Fill
                    .colors
                        .color.jsColor(style="background-color:rgb(0, 0, 0)")
                        .color.jsColor(style="background-color:rgb(255,255,255)")
                        .color.jsColor(style="background-color:rgb(255,59,48)")
                        .color.jsColor(style="background-color:rgb(255,149,0)")
                        .color.jsColor(style="background-color:rgb(255,204,0)")
                        .color.jsColor(style="background-color:rgb(76,217,100)")
                        .color.jsColor(style="background-color:rgb(90,200,250)")
                        .color.jsColor(style="background-color:rgb(0,122,255)")
                        .color.jsColor(style="background-color:rgb(88,86,214)")
            .chat
                .player__board#playerBoard
                ul.chat__messages#messages
                form.chat__form#messageForm(action="", method="post")
                    input(placeholder="Write a message", type="text")

        #notifications
        script.
            window.events = !{events}
        script(src="/socket.io/socket.io.js")
        script(src="/js/main.js")